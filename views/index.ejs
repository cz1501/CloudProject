<%- include('./templates/header.ejs') %>

<!-- Link game page CSS -->
<link rel="stylesheet" href="game.css">

        <img src="marquee.png" alt="Background Image">
        <div class="overlay-card">
          <div class="card content-card">
            <h1 class="text-center mt-3">Movie Match</h1>
            <p class="text-center">Guess the actor based their best known movies and roles.</p>
            <p class="text-center">Each wrong guess and clue reveal lower your points!</p>
            <div class="row justify-content-center">
              <div class="col-md-6">
                <div id="guess-section">
                  <label for="actor-guess"><strong>Guess the Actor: </strong></label>
                  <div class="input-group mb-2">
                    <input type="text" id="actor-guess" class="form-control" aria-label="Guess the Actor" aria-describedby="check-button">
                    <div class="input-group-append">
                      <button id="check-guess" class="btn btn-primary" type="button">Check</button>
                    </div>
                  </div>
                  <div class="d-flex justify-content-between">
                    <strong>Guesses Left: <span id="guesses-left">5</span></strong>
                    <strong>Score: <span id="current-score">1000</span></strong>
                  </div>
                  <p id="actor-name" class="alert alert-info mt-2" style="display: none;"><%= actorName %></p>
                  <p id="guess-result" class="alert alert-info mt-2" style="display: none;"></p>
                  <button id="reveal-movie" class="btn btn-secondary mt-2">Reveal Next Movie</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="container mt-3">
        <div class="row justify-content-center">
          <div class="col-md-6">
            <% movies.slice().reverse().forEach((movie, index) => { %>
              <div class="border-card mb-2">
                <div class="card movie-card">
                  <div class="card-body">
                    <p><strong>Clue <%= index + 1 %> - Year: <%= movie.release_year %></strong></p>
                    <p><strong>Character: <%= movie.character %></strong></p>
                    <p><strong>Title: </strong><span class="movie-details" id="movie-details-<%= index %>"><strong><%= movie.title %></strong></span></p>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        </div>
      </div>

  <!-- Bootstrap JS (optional, for certain components) -->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <!-- Load game script -->
  <script src="game.js"></script>

  <%- include("templates/footer.ejs") %>